@model IEnumerable<Student_CourseManagement.Application.RRModels.CourseResponse>

@{
    ViewData["Title"] = "GetCourses";
}

<h1>Courses</h1>

<p>
    <a asp-action="add" asp-controller="courses" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CourseName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseName)
            </td>
            <td>
                    <a asp-action="UpdateCourse" asp-controller="courses" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                    <a asp-action="DeleteCourse" asp-controller="courses" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    <a asp-action="GetStudentsByCourseId" asp-controller="StudentCourses" asp-route-id="@item.Id" class="btn btn-success">View Students</a>
               
            </td>
        </tr>
}
    </tbody>
</table>
