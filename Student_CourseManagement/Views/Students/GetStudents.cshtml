@model IEnumerable<Student_CourseManagement.Application.RRModels.StudentResponse>

@{
    ViewData["Title"] = "GetStudents";
}

<h1>Students</h1>
@{
    if (TempData["Error"] != null)
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                Swal.fire({
                    title: 'Error!',
                    text: '@TempData["Error"]',
                    icon: 'error',
                    confirmButtonText: 'OK'
                });
            });
        </script>
    }
    else if (@TempData["Success"] != null)
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                Swal.fire({
                    title: 'Success',
                    text: '@TempData["Success"]',
                    icon: 'success',
                    confirmButtonText: 'OK'
                });
            });
        </script>
    }
}
<p>
    <a asp-action="AddStudent" asp-controller="students" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.ContactNo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.ContactNo)
            </td>
            <td>
                    <a asp-action="UpdateStudent" asp-route-id="@item.Id" asp-controller="Students" class="btn btn-info">Edit</a>
                    <a asp-action="GetStudentById" asp-route-id="@item.Id" asp-controller="Students" class="btn btn-success">Detail</a>
                    <a asp-action="DeleteStudent" asp-route-id="@item.Id" asp-controller="Students" class="btn btn-danger">Delete</a>


            </td>
        </tr>
}
    </tbody>
</table>
